<UserControl x:Class="EloksalPro.View.ReportsView"
      
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             xmlns:viewModel="clr-namespace:EloksalPro.ViewModels" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" 
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm">
    <UserControl.DataContext>
        <viewModel:ReportsViewModel/>
    </UserControl.DataContext>
    <TabControl x:Name="tabControl"  >
        <TabItem Header="Отчеты за смену" >
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="1,2.9">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="1"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <DatePicker Grid.Column="1" Grid.Row="1" x:Name="txtDate" SelectedDate="{Binding Date}"
                                DisplayDate="{Binding DateTime.Now}"   BorderBrush="#E0E1F1" FontSize="14" Margin="1" FontFamily="Times New Roman" />
                    <CheckBox x:Name="checkBox" Grid.Column="1" Grid.Row="2"   Height="20" Content="Дневная смена (08:00-20:00)"  IsChecked="{Binding Path=ChoiceDay, Mode=TwoWay}" />
                    <CheckBox x:Name="checkBox1" Grid.Column="1" Grid.Row="3"  Height="20" Content="Ночная смена (20:00-08:00)" IsChecked="{Binding Path=ChoiceNight, Mode=TwoWay}" />
                    <ComboBox Grid.Column="1" Grid.Row="4" x:Name="txtProductionSector" FontSize="14" FontFamily="Times New Roman" 
						ItemsSource="{Binding ProductionSectorList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding ProductionSectorSource, Mode=TwoWay}" Margin="1" />
                    <Button Grid.Row="5" Grid.Column="1" x:Name="btnNewProfile" 
						Command="{Binding ShowPrintReportsCommand}"
						Content="Сформировать отчет за смену"
						Style="{StaticResource controlButtonLightGray}" />
                </Grid>
            </Border>
        </TabItem>
        <TabItem Header="Отчет по номеру заказа" >
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="1,2.9">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="1"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <ComboBox Grid.Column="1" Grid.Row="1" Margin="1" ItemsSource="{Binding NumberSpecification, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding NumberSpecificationSource, Mode=TwoWay}" IsEditable="True" StaysOpenOnEdit="True"  />
                     <TextBox Grid.Column="1" Grid.Row="2"  IsEnabled="False" Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                     <Button Grid.Row="4" Grid.Column="1" x:Name="btnReport" 
						Command="{Binding ShowPrintReportsClientCommand}"
						Content="Сформировать отчет"
						Style="{StaticResource controlButtonLightGray}" />
                </Grid>
            </Border>
        </TabItem>
    </TabControl>
    </UserControl>