<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EloksalPro.View"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:viewModel="clr-namespace:EloksalPro.ViewModels" 
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" x:Class="EloksalPro.View.SpecificationEloksalProfileView"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Спецификация алюминиевого профиля"  Width="1200" Height="800">
    <Window.DataContext>
        <viewModel:SpecificationEloksalProfileViewModel/>
    </Window.DataContext>
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/background.jpg"/>
        </Border.Background>
        <Border CornerRadius="10"    
			BorderThickness="3"
			Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1B4968" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#FF6C0618" Offset="0"/>
                    <GradientStop Color="#FF3C3B42" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel x:Name="pnlControlBar"
					Grid.Row="0"
					Orientation="Horizontal"
					FlowDirection="RightToLeft"
					Background="Transparent"
					MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
					MouseEnter="pnlControlBar_MouseEnter">
                    <Button x:Name="btnClose"
						Style="{StaticResource controlButton}"
						Tag="{StaticResource color4}" 
						Click="btnClose_Click" HorizontalAlignment="Right" Width="20" >
                        <fa:IconImage Icon="PowerOff" Style="{StaticResource controlButtonIcon}"  />
                    </Button>
                    <Button x:Name="btnMaximize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color6}"
                                Click="btnMaximize_Click" HorizontalAlignment="Right" Width="20">
                        <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>
                    </Button>
                    <Button x:Name="btnMinimize"  Width="20"
						Style="{StaticResource controlButton}" 
						Tag="{StaticResource color8}"
						Click="btnMinimize_Click">
                        <fa:IconImage Icon="WindowMinimize" Style="{StaticResource controlButtonIcon}"/>
                    </Button>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0"  Text="Клиент:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="1"  Text="Номер спецификации:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="2"  Text="Дата спецификации:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="3"  Text="Номер договора:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="4"  Text="Дата договора:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="5"  Text="Шифр изделия:" 
						Style="{StaticResource controlTextBlock}"/>
                   
                    <TextBlock Grid.Column="0" Grid.Row="6"  Text="Количество хлыстов:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="7"  Text="Длина хлыста:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="6"  Text="Количество:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="7"  Text="Длина:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="4" Grid.Row="6"  Text="Количество 2:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="4" Grid.Row="7"  Text="Длина 2:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="8"  Text="Примечание:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="10"  Text="Выбор расчета:" 
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="11"  Text="Спецификация для расчета:" 
						Style="{StaticResource controlTextBlock}"/>
                   
                    <ComboBox Grid.Column="1" Grid.Row="0" x:Name="txtClientName"
						ItemsSource="{Binding ClientNameList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding ClientNameSource, Mode=TwoWay}" Margin="1"/>
                    <TextBox Grid.Column="1" Grid.Row="1"  x:Name="txtSpecification"
						Text="{Binding NumberSpecification, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <DatePicker Grid.Column="1" Grid.Row="2" x:Name="txtDateSpecification" SelectedDate="{Binding SpecificationEloksalProfile.DateSpecification}" DisplayDate="{Binding DateTime.Now}" Margin="1"  BorderBrush="#E0E1F1" />
                    <TextBox Grid.Column="1" Grid.Row="3"  x:Name="txtContract" IsEnabled="False"
						Text="{Binding NumberContract, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <DatePicker Grid.Column="1" Grid.Row="4"  x:Name="txtDateContract" SelectedDate="{Binding DateContract}" DisplayDate="{Binding DateTime.Now}" Margin="1"  BorderBrush="#E0E1F1" IsEnabled="False"/>
                    <ComboBox Grid.Column="1" Grid.Row="5" x:Name="txtNomenclature"
						ItemsSource="{Binding NomenclatureList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding NomenclatureSource, Mode=TwoWay}" Margin="1"/>

                    <TextBox Grid.Column="1" Grid.Row="6"  x:Name="txtAmountFact"
						Text="{Binding AmountFactMustBe, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="1" Grid.Row="7"  x:Name="txtLenghtFact"
						Text="{Binding LenghtFactMustBe, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="6"  x:Name="txtCount"
						Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="7"  x:Name="txtLenght" IsEnabled="False"
						Text="{Binding LenghtProfile, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="5" Grid.Row="6"  x:Name="txtCountTwo"
						Text="{Binding CountTwo, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="5" Grid.Row="7"  x:Name="txtLenghtTwo" IsEnabled="False"
						Text="{Binding LenghtProfileTwo, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="5"  x:Name="txtAnnotation"
						Text="{Binding Annotation, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <Button Grid.Column="4" Grid.Row="11" Grid.ColumnSpan="2"  x:Name="btnSave" 
						Command="{Binding CalculateAndInsertDataCommand}"
						Content="CALCULATE AND ADD DATA" 
						Style="{StaticResource controlButtonGray}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <TextBlock Grid.Column="0" Grid.Row="12"  Text="Спецификация:" 
						Style="{StaticResource controlTextBlock}"/>


                    <CheckBox x:Name="checkBox" Grid.Column="1"  Grid.Row="10"  Height="20" Content="Расчет по п.м"  IsChecked="{Binding Path=ChoicePMetr, Mode=TwoWay}" />
                    <CheckBox x:Name="checkBox1" Grid.Column="2"  Grid.Row="10"  Height="20" Content="Расчет по шт" IsChecked="{Binding Path=ChoicePiece, Mode=TwoWay}" />

                    <CheckBox x:Name="checkBox2" Grid.Column="1"  Grid.Row="11"  Height="20" Content="Отметить, если только для расчета"  IsChecked="{Binding Path=Calculation, Mode=TwoWay}" />
                    <TextBlock Grid.Column="3"  Grid.Row="10"  Text="* Расчет по умолчанию производится по кг" Grid.ColumnSpan="2" 
						Style="{StaticResource controlTextBlock}" VerticalAlignment="Center" FontSize="8"/>
                   
                    <dxg:GridControl  Grid.Column="0" Grid.Row="13" Grid.ColumnSpan="6" x:Name="gridControl" EnableSmartColumnsGeneration="True" ItemsSource="{Binding AllSpecification}" Margin="5" >
                        <dxg:GridControl.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Сохранить данные" Command="{Binding SaveInsertCommand}" />
                                <MenuItem Header="Сохранить данные для бухгалтерии" Command="{Binding SaveSpecificationCsvCommand}"/>
                                <MenuItem Header="Печать спецификации" Command="{Binding PrintSpecificationCommand}"/>
                                <MenuItem Header="Печать спецификации_2" Command="{Binding PrintSpecificationTwoCommand}"/>
                                <MenuItem Header="Обновить цену в прайс-листе" Command="{Binding UpdatePriceListCommand}"/>
                                <MenuItem Header="Удалить выделенную строку" Click="DeleteClick"/>
                            </ContextMenu>
                        </dxg:GridControl.ContextMenu>
                        <dxg:GridControl.TotalSummary>
                            <dxg:GridSummaryItem FieldName="AmountPieceFact" ShowInColumn="AmountPieceFact" SummaryType="Sum" FrameworkElement.FlowDirection="RightToLeft" DisplayFormat="#,#.00"/>
                            <dxg:GridSummaryItem FieldName="TotalSumWeight" ShowInColumn="TotalSumWeight" SummaryType="Sum" FrameworkElement.FlowDirection="RightToLeft"  DisplayFormat="#,#.00"/>
                            <dxg:GridSummaryItem FieldName="AmountPMetrChange" ShowInColumn="AmountPMetrChange" SummaryType="Sum" FrameworkElement.FlowDirection="RightToLeft"  DisplayFormat="#,#.00"/>
                            <dxg:GridSummaryItem FieldName="AmountKgChange" ShowInColumn="AmountKgChange" SummaryType="Sum" FrameworkElement.FlowDirection="RightToLeft"  DisplayFormat="#,#.00"/>
                        </dxg:GridControl.TotalSummary>
                        <dxg:GridControl.Bands>
                            <dxg:GridControlBand Header="Band1" OverlayHeaderByChildren="True">
                                <dxg:GridColumn FieldName="Id" Header="Id" Visible="False"/>
                                <dxg:GridColumn FieldName="RowNumber" Header="№" UnboundExpression="" UnboundType="Integer" Width="30" AllowEditing="False" />
                                <dxg:GridColumn FieldName="NomenclatureProfile" Header="Номенклатура профиля"  Width="180" AllowEditing="False" />
                                <dxg:GridColumn FieldName="EloksalNoCommercial" Header="Наименование профиля заказчика" Width="120" AllowEditing="False" />
                            </dxg:GridControlBand>
                            <dxg:GridControlBand Header="Объем поставки" HorizontalHeaderContentAlignment="Center" >
                                <dxg:GridColumn FieldName="WeightMeter" Header="Вес" Width="70"  AllowEditing="False" />
                                <dxg:GridColumn FieldName="OuterPerimeter" Header="Периметр" Width="70"  AllowEditing="False" />
                                <dxg:GridColumn FieldName="LenghtProfileMustBe" Header="Длина хлыста план" Width="70"  AllowEditing="true" />
                                <dxg:GridColumn FieldName="AmountPieceMustBe" Header="Кол-во хлыстов план" Width="90" AllowEditing="True" />
                                <dxg:GridColumn FieldName="AmountPMetrChange" Header="Кол-во, п.м" Width="85" AllowEditing="False" >
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <dxe:TextEdit Name="PART_Editor" DisplayFormatString="#,#.00" />
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="AmountKgChange" Header="Кол-во, кг" Width="80" AllowEditing="False" >
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <dxe:TextEdit Name="PART_Editor" DisplayFormatString="#,#.00" />
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="ChoicePiece" Header="V, шт" Width="50"/>
                                <dxg:GridColumn FieldName="ChoicePMetr" Header="V, п.м" Width="50"/>
                                <dxg:GridColumn FieldName="ChoiceKg" Header="V, кг" Width="40" />
                                <dxg:GridColumn FieldName="LenghtProfileFact" Header="Длина хлыста факт" Width="70" />
                                <dxg:GridColumn FieldName="AmountPieceFact" Header="Кол-во хлыстов факт" Width="90" />
                                <dxg:GridColumn FieldName="LenghtProfile" Header="Длина профиля" Width="80" />
                                <dxg:GridColumn FieldName="AmountPiece" Header="Кол-во" Width="60" />
                                <dxg:GridColumn FieldName="LenghtProfileTwo" Header="Длина профиля2" Width="80" />
                                <dxg:GridColumn FieldName="AmountPieceTwo" Header="Кол-во 2" Width="60" />

                                <dxg:GridColumn FieldName="Column1" UnboundType="Integer" UnboundExpression="[AmountPieceMustBe] - [AmountPieceFact]" Visible="False" />
                                <dxg:GridColumn FieldName="Column2" UnboundType="Integer" UnboundExpression="[LenghtProfileMustBe] - [LenghtProfileFact]" Visible="False"/>
                            </dxg:GridControlBand>
                            <dxg:GridControlBand Header="Стоимость профиля" HorizontalHeaderContentAlignment="Center" >
                                <dxg:GridColumn FieldName="CalculatePriceKg" Header="Цена за 1 кг,руб (c НДС)" Width="80" AllowEditing="False" >
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <dxe:TextEdit Name="PART_Editor" DisplayFormatString="#,#.00" />
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="CalculatePricePiece" Header="Цена за 1 шт, руб (c НДС)" Width="80" AllowEditing="False" >
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <dxe:TextEdit Name="PART_Editor" DisplayFormatString="#,#.00" />
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="CalculatePMetr" Header="Цена за 1 п.м, руб (c НДС)" Width="80" AllowEditing="False" >
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <dxe:TextEdit Name="PART_Editor" DisplayFormatString="#,#.00" />
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="PriceProfileArea" Header="Цена за 1 М², руб, (c НДС)" Width="80" AllowEditing="True" >
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <dxe:TextEdit Name="PART_Editor" DisplayFormatString="#,#.00"/>
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                            </dxg:GridControlBand>
                            <dxg:GridControlBand Header="Band2" OverlayHeaderByChildren="True" >
                                <dxg:GridColumn FieldName="SumProfileArea" Header="Сумма с учетом НДС(М²), руб" Width="100" AllowEditing="False" >
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <dxe:TextEdit Name="PART_Editor" DisplayFormatString="#,#.00" />
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="TotalSumWeight" Header="Сумма с учетом НДС, руб" Width="150" AllowEditing="False"  >
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <dxe:TextEdit Name="PART_Editor" DisplayFormatString="#,#.00" />
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn FieldName="Annotation" Header="Примечание" Width="120" />
                            </dxg:GridControlBand>
                        </dxg:GridControl.Bands>
                        <dxg:GridControl.View>
                            <dxg:TableView x:Name="tableView" ShowTotalSummary="True" FontSize="10" AutoWidth="True" NewItemRowPosition="Bottom" FontFamily="Times New Roman"  >
                                <dxg:TableView.ColumnHeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </dxg:TableView.ColumnHeaderTemplate>
                                <dxg:TableView.RowStyle>
                                    <Style>
                                        <Setter Property="TextElement.Foreground" Value="Black"/>
                                    </Style>
                                </dxg:TableView.RowStyle>
                                <dxg:TableView.FormatConditions>
                                    <dxg:FormatCondition ApplyToRow="False" Expression="[Column1] &lt;&gt; 0" FieldName="AmountPieceMustBe">
                                        <dx:Format Icon="{dx:IconSet Name=Flags3_3}"/>
                                    </dxg:FormatCondition>
                                    <dxg:FormatCondition ApplyToRow="False" Expression="[Column2] &lt;&gt; 0" FieldName="LenghtProfileMustBe">
                                        <dx:Format Icon="{dx:IconSet Name=Flags3_3}" TextDecorations="{x:Null}"/>
                                    </dxg:FormatCondition>
                                </dxg:TableView.FormatConditions>
                            </dxg:TableView>
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                    <!--<Button Grid.Column="1" Grid.Row="13"  x:Name="btnSaveAllDataSpecification" 
						Command="{Binding SaveInsertCommand}"
						Content="SAVE DATA" 
						Style="{StaticResource controlButtonGray}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <Button Grid.Column="1" Grid.Row="14"  x:Name="btnPrint" 
						Command="{Binding PrintSpecificationCommand}"
						Content="PRINT SPECIFICATION" 
						Style="{StaticResource controlButtonGray}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <Button Grid.Column="1" Grid.Row="15"  x:Name="btnDelete" 
						Click="DeleteClick"
						Content="DELETE PROFILE" 
						Style="{StaticResource controlButtonGray}" HorizontalAlignment="Right" Margin="0,0,5,0"/>-->
                    <TextBox Grid.Column="1" Grid.Row="11"  x:Name="txtId"
						Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}" Visibility="Hidden" />
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
