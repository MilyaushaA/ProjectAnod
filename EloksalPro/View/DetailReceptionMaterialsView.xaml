<Window x:Class="EloksalPro.View.DetailReceptionMaterialsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EloksalPro.View"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:viewModel="clr-namespace:EloksalPro.ViewModels" 
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Title="SpecificationEloksalProfileView"  Width="1000">
    <Window.DataContext>
        <viewModel:ReceptionMaterialsViewModel/>
    </Window.DataContext>
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/background.jpg"/>
        </Border.Background>
        <Border CornerRadius="10"    
            BorderThickness="3"
            Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1B4968" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#FF6C0618" Offset="0"/>
                    <GradientStop Color="#FF3C3B42" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">
                    <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}" 
                                Click="btnClose_Click" HorizontalAlignment="Right" Width="20" >
                        <fa:IconImage Icon="PowerOff" Style="{StaticResource controlButtonIcon}"  />
                    </Button>
                    <Button x:Name="btnMinimize"  Width="20"
                                Style="{StaticResource controlButton}" 
                                Tag="{StaticResource color8}"
                                Click="btnMinimize_Click">
                        <fa:IconImage Icon="WindowMinimize" Style="{StaticResource controlButtonIcon}"/>
                    </Button>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0"  Text="Номер заказа:" 
                      Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="1"  Text="Дата приема:" 
                      Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="2"  Text="Смена:" 
                      Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="3"  Text="Кладовщик / учетчик:" 
                      Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="4"  Text="Примечание:" 
                      Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="6"  Text="Детальный отчет по приему профиля:" 
                      Style="{StaticResource controlTextBlock}"/>
                    <TextBox Grid.Column="1" Grid.Row="0" x:Name="txtNumSpecification" Grid.ColumnSpan="2"
                       Text="{Binding NumberSpecification,UpdateSourceTrigger=PropertyChanged}"
                       Style="{StaticResource controlText}" FontFamily="Times New Roman" IsEnabled="False"/>
                    <DatePicker Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Name="txtDateReception" SelectedDate="{Binding DateReception}" 
                                DisplayDate="{Binding DateTime.Now}" Margin="3" BorderBrush="#E0E1F1" />
                    <ComboBox Grid.Column="1" Grid.Row="2" x:Name="txtWorkingShift" Grid.ColumnSpan="2"
                       ItemsSource="{Binding WorkingShiftList, UpdateSourceTrigger=PropertyChanged}"
                       SelectedItem="{Binding WorkingShiftSource, Mode=TwoWay}"  Margin="3"/>
                    <ComboBox Grid.Column="1" Grid.Row="3" x:Name="txtFullName" Grid.ColumnSpan="2"
                       ItemsSource="{Binding ListUser, UpdateSourceTrigger=PropertyChanged}"
                       SelectedItem="{Binding SourceUser, Mode=TwoWay}"  Margin="3"/>
                    <TextBox Grid.Column="1" Grid.Row="4" Grid.RowSpan="2"  Grid.ColumnSpan="2" x:Name="txtAnnotation" TextWrapping="Wrap" AcceptsReturn="True"
                       Text="{Binding Annotation,UpdateSourceTrigger=PropertyChanged}"
                       Style="{StaticResource controlText}"  SpellCheck.IsEnabled="True"/>

                    <dxg:GridControl  Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="3" Name="gridControl"  EnableSmartColumnsGeneration="True" ItemsSource="{Binding DetailReception}" Margin="5" >
                        <dxg:GridControl.TotalSummary>
                            <dxg:GridSummaryItem FieldName="TotalSumWeight" ShowInColumn="TotalSumWeight" SummaryType="Sum" IsLast="True" FrameworkElement.FlowDirection="RightToLeft" DisplayFormat="#,#.00"/>
                        </dxg:GridControl.TotalSummary>
                        <dxg:GridControl.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Открыть подробный отчет по приему сырья" Command="{Binding ShowExtensiveReceptionProfileCommand}" />
                            </ContextMenu>
                        </dxg:GridControl.ContextMenu>
                        <dxg:GridColumn FieldName="Id" Header="Id" Visible="False"/>
                        <dxg:GridColumn FieldName="RowNumber" Header="№" UnboundExpression="" UnboundType="Integer" Width="30" />
                        <dxg:GridColumn FieldName="ClientName" Header="Наименование заказчика" Width="120" AllowEditing="False" />
                        <dxg:GridColumn FieldName="DateReception" Header="Дата приема" Width="120" AllowEditing="False" />
                        <dxg:GridColumn FieldName="NumberSpecification" Header="Номер заказа"  Width="80"  AllowEditing="False"/>
                        <dxg:GridColumn FieldName="EloksalNoCommercial" Header="Номенклатура заказчика" Width="110"  AllowEditing="False"/>
                        <dxg:GridColumn FieldName="NomenclatureProfile" Header="Номенклатура профиля Eloksal" Width="200"  AllowEditing="False"/>
                        <dxg:GridColumn FieldName="AmountPieceFact" Header="Количество хлыстов, шт" />
                        <dxg:GridColumn FieldName="LenghtFact" Header="Длина хлыста, мм" Width="100" />
                        <dxg:GridColumn FieldName="WeightMeter" Header="Вес погонного метра, кг/м" AllowEditing="False" Visible="False"/>
                        <dxg:GridColumn FieldName="Column1" Header="Вес погонного метра, кг/м" AllowEditing="False" UnboundExpression="[WeightMeter] / 1000" UnboundType="Decimal"/>
                        <dxg:GridColumn FieldName="TotalSumWeight" Header="Общий вес профиля, кг" AllowEditing="False" Width="170">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <dxe:TextEdit Name="PART_Editor" DisplayFormatString="#,#.00"/>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>
                        <dxg:GridControl.View>
                            <dxg:TableView Name="tableView" ShowTotalSummary="True" FontSize="12"  AutoWidth="True" NewItemRowPosition="Bottom" FontFamily="Times New Roman"  >
                                <dxg:TableView.ColumnHeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </dxg:TableView.ColumnHeaderTemplate>
                                <dxg:TableView.RowStyle>
                                    <Style>
                                        <Setter Property="TextElement.Foreground" Value="Black"/>
                                    </Style>
                                </dxg:TableView.RowStyle>
                            </dxg:TableView>
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                    <Button Grid.Column="2" Grid.Row="8"  x:Name="btnSaveAllDataReception" 
                            Command="{Binding SaveInsertCommand}"
                            Content="SAVE DATA" 
                            Style="{StaticResource controlButtonGray}" HorizontalAlignment="Right" Margin="0,0,5,0">
                    </Button>
                
                    <TextBox Grid.Column="0" Grid.Row="8"  x:Name="txtId" IsEnabled="False"
                       Text="{Binding IdReception,UpdateSourceTrigger=PropertyChanged}"
                       Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="1" Grid.Row="8"  x:Name="txtIdNomenclature"  IsEnabled="False"
                       Text="{Binding IdNomenclature,UpdateSourceTrigger=PropertyChanged}"
                       Style="{StaticResource controlText}"/>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
