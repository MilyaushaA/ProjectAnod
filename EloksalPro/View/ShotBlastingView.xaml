                        <dxg:GridColumn FieldName="BasketNumber" Header="Номер корзины" Width="80"  AllowEditing="False"  Visible="False"/>
                        <dxg:GridColumn FieldName="OpeningTheFlapFirst" Header="Открытие заслонки,% №1" Visible="False"/>
                        <dxg:GridColumn FieldName="OpeningTheFlapSecond" Header="Открытие заслонки,%  №2" Visible="False"/>
                        <dxg:GridColumn FieldName="OpeningTheFlapThird" Header="Открытие заслонки,%  №3" Visible="False" />
                        <dxg:GridColumn FieldName="OpeningTheFlapFourth " Header="Открытие заслонки,%  №4" Visible="False" />
                        <dxg:GridColumn FieldName="RotationSpeedFirst" Header="Скорость вращения, об/мин №1" Visible="False" />
                        <dxg:GridColumn FieldName="RotationSpeedSecond" Header="Скорость вращения, об/мин №2" Visible="False"/>
                        <dxg:GridColumn FieldName="RotationSpeedThird" Header="Скорость вращения, об/мин №3" Visible="False"/>
                        <dxg:GridColumn FieldName="RotationSpeedFourth" Header="Скорость вращения, об/мин №4" Visible="False" />
                        <dxg:GridColumn FieldName="RotationSpeedThird" Header="Высота прижима, мм" Visible="False"/>
                        <dxg:GridColumn FieldName="RotationSpeedFourth" Header="Скорость рольганга, м/мин" Visible="False"/>
