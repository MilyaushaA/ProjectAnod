						Style="{StaticResource controlTextBlock}"/>-->
                    <!--<TextBlock Grid.Column="4" Grid.Row="0"  Text="Площадь произведенного профиля,М2:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="4" Grid.Row="1"  Text="Площадь бракованного профиля,М2:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>-->

                    <TextBox Grid.Column="1" Grid.Row="0" IsEnabled="False" Name="txtNumber"
						Text="{Binding NumberShotGeneral, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <DatePicker Grid.Column="1" Grid.Row="1" Name="txtDate" FontSize="12" SelectedDate="{Binding ShotBlasting.DateShotBlasting }" DisplayDate="{Binding DateTime.Now}"  BorderBrush="#E0E1F1" Margin="1"/>
                    <ComboBox Grid.Column="1" Grid.Row="2" Name="txtShift"
						ItemsSource="{Binding WorkingShiftList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding WorkingShiftSource, Mode=TwoWay}" Margin="1"/>
                   
                    <!--<dxe:DateEdit Grid.Column="1" Grid.Row="3"  Mask="G" MaskUseAsDisplayFormat="True" EditValue="{Binding ShotBlasting.StartTime}"   Margin="1" IsPopupOpen="True" >
                        <dxe:DateEdit.StyleSettings>
                            <dxe:DateEditNavigatorWithTimePickerStyleSettings/>
                        </dxe:DateEdit.StyleSettings>
                    </dxe:DateEdit>
                    <dxe:DateEdit Grid.Column="1" Grid.Row="4"  Mask="G" MaskUseAsDisplayFormat="True" EditValue="{Binding ShotBlasting.EndTime}"  Margin="1" IsPopupOpen="True"  >
                        <dxe:DateEdit.StyleSettings>
                            <dxe:DateEditNavigatorWithTimePickerStyleSettings/>
                        </dxe:DateEdit.StyleSettings>
                    </dxe:DateEdit>-->
                    <ComboBox Grid.Column="1" Grid.Row="3" Margin="1"
				    ItemsSource="{Binding NumderSpecification, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding NumberSpecificationSource, Mode=TwoWay}" IsEditable="True" StaysOpenOnEdit="True" />

                    <ComboBox Grid.Column="1" Grid.Row="4" Margin="1"
						ItemsSource="{Binding NomenclatureProfileList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding NomenclatureSource, Mode=TwoWay}" />
                    <TextBox Grid.Column="1" Grid.Row="5" 
						Text="{Binding EloksalNoCommercial, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}" IsEnabled="False"/>
                    <TextBox Grid.Column="1" Grid.Row="6"  IsEnabled="False"
						Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="1" Grid.Row="7"  x:Name="txtLenghtProfile" IsEnabled="False"
						Text="{Binding LenghtProfile, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="1" Grid.Row="8"  x:Name="txtWeightProfile" IsEnabled="False"
						Text="{Binding WeightProfile, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="1" Grid.Row="9"  x:Name="txtOuterPerimetr" IsEnabled="False"
						Text="{Binding OuterPerimeter, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="0" 
						Text="{Binding QuantityProducedProfile, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <!--<TextBox Grid.Column="3" Grid.Row="7" 
						Text="{Binding ShotBlasting.BasketNumber, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>-->
                    <TextBox Grid.Column="3" Grid.Row="1" 
						Text="{Binding WeightProfileProduced, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}" IsEnabled="False"/>
                    <TextBox Grid.Column="3" Grid.Row="2" 
						Text="{Binding AreaProfileProduced, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}" IsEnabled="False"/>
                    <TextBox Grid.Column="3" Grid.Row="3" 
						Text="{Binding QuantityDefectiveProfile, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="4"  
						Text="{Binding ShotBlasting.CodeDefectiveProfile, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="5" 
						Text="{Binding WeightProfileDefective, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}" IsEnabled="False"/>
                    <TextBox Grid.Column="3" Grid.Row="6" 
						Text="{Binding AreaProfileDefective, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}" IsEnabled="False"/>
                    <!--<TextBox Grid.Column="5" Grid.Row="0" 
						Text="{Binding ShotBlasting.ClampingHeight, UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
						Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="5" Grid.Row="1" 
						Text="{Binding ShotBlasting.SpeedTheRoller, UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
						Style="{StaticResource controlText}"/>-->
                    <TextBox Grid.Column="3" Grid.Row="8" Grid.ColumnSpan="2"
						Text="{Binding ShotBlasting.Annotation, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}" />
                    <!--<TextBox Grid.Column="3" Grid.Row="9" Grid.ColumnSpan="2"
						Text="{Binding Downtime, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}" />-->
                    <TextBox Grid.Column="0" Grid.Row="10"  x:Name="txtId" IsEnabled="False"
						Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
						Style="{StaticResource controlText}" />
                    <ComboBox Grid.Column="3" Grid.Row="7" Margin="1"
						ItemsSource="{Binding EmployeeList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding EmployeeSource, Mode=TwoWay}" />
