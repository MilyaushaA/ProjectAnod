                    <TextBlock Grid.Column="0" Grid.Row="8"  Text="Вес погонного метра, кг/м:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="9"  Text="Внешний периметр, мм:" FontSize="12"
						Style="{StaticResource controlTextBlock}" />
                    <TextBlock Grid.Column="2" Grid.Row="0"  Text="Кол-во произведенного профиля, шт:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <!--<TextBlock Grid.Column="2" Grid.Row="7"  Text="Номер корзины:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>-->
