                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="№ 1:" FontSize="12"
							Style="{StaticResource controlTextBlock}"/>
                        <TextBox Grid.Column="1"   
							Text="{Binding ShotBlasting.OpeningTheFlapFirst, UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
							Style="{StaticResource controlText}"/>
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="№ 2:" FontSize="12"
							Style="{StaticResource controlTextBlock}"/>
                        <TextBox Grid.Column="1"   
							Text="{Binding ShotBlasting.OpeningTheFlapSecond, UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
							Style="{StaticResource controlText}"/>
                    </Grid>
                    <Grid Grid.Row="5" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="№ 3:" FontSize="12"
							Style="{StaticResource controlTextBlock}"/>
                        <TextBox Grid.Column="1"   
							Text="{Binding ShotBlasting.OpeningTheFlapThird, UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
							Style="{StaticResource controlText}"/>
                    </Grid>
                    <Grid Grid.Row="6" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="№ 4:" FontSize="12"
							Style="{StaticResource controlTextBlock}"/>
                        <TextBox Grid.Column="1"   
							Text="{Binding ShotBlasting.OpeningTheFlapFourth , UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
							Style="{StaticResource controlText}"/>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="№ 1:" FontSize="12"
							Style="{StaticResource controlTextBlock}"/>
                        <TextBox Grid.Column="1"   
							Text="{Binding ShotBlasting.RotationSpeedFirst , UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
							Style="{StaticResource controlText}"/>
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="№ 2:" FontSize="12"
							Style="{StaticResource controlTextBlock}"/>
                        <TextBox Grid.Column="1"   
							Text="{Binding ShotBlasting.RotationSpeedSecond  , UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
							Style="{StaticResource controlText}"/>
                    </Grid>
                    <Grid Grid.Row="5" Grid.Column="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="№ 3:" FontSize="12"
							Style="{StaticResource controlTextBlock}"/>
                        <TextBox Grid.Column="1"   
							Text="{Binding ShotBlasting.RotationSpeedThird , UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
							Style="{StaticResource controlText}"/>
                    </Grid>
                    <Grid Grid.Row="6" Grid.Column="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="№ 4:" FontSize="12" 
							Style="{StaticResource controlTextBlock}"/>
                        <TextBox Grid.Column="1"   
							Text="{Binding ShotBlasting.RotationSpeedFourth, UpdateSourceTrigger=PropertyChanged,ConverterCulture=de-DE,StringFormat=\{0:f2\}, ValidatesOnNotifyDataErrors=True}"
							Style="{StaticResource controlText}"/>
                    </Grid>-->
                    <Button Grid.Column="3" Grid.Row="10" Grid.ColumnSpan="2" Grid.RowSpan="2"  x:Name="btnSave" 
						Command="{Binding SaveInsertCommand }"
						Content="SAVE DATA"  HorizontalAlignment="Right"
						Style="{StaticResource controlButtonGray}" />

                    <dxg:GridControl  Grid.Column="0" Grid.Row="14" Grid.ColumnSpan="7" x:Name="gridControl" EnableSmartColumnsGeneration="True" ItemsSource="{Binding ShotBlastingProfile}" Margin="5"  >
                        <dxg:GridControl.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить строку" Command="{Binding ShowRemoveCommand}" />
                            </ContextMenu>
                        </dxg:GridControl.ContextMenu>
                        <!--<dxg:GridControl.TotalSummary>
                            <dxg:GridSummaryItem FieldName="GeneralQuantityProducedProfile" ShowInColumn="GeneralQuantityProducedProfile" SummaryType="Sum" FrameworkElement.FlowDirection="RightToLeft"/>
                            <dxg:GridSummaryItem FieldName="GeneralQuantityDefectiveProfile" ShowInColumn="GeneralQuantityDefectiveProfile" SummaryType="Sum" FrameworkElement.FlowDirection="RightToLeft"/>
                        </dxg:GridControl.TotalSummary>-->
                        <dxg:GridColumn FieldName="Id" Header="Id" Visible="False" />
                        <dxg:GridColumn FieldName="DateShotBlasting" Header="Дата" Width="70" AllowEditing="False" />
                        <dxg:GridColumn FieldName="StartTime" Header="Время начало" Width="80"  AllowEditing="False" Visible="False" >
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings  DisplayFormat="{}{0:d/MM/yyyy HH:mm}" Mask="g"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="EndTime" Header="Время окончания" Width="100" AllowEditing="False" Visible="False" >
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings  DisplayFormat="{}{0:d/MM/yyyy HH:mm}" Mask="g"/>
                            </dxg:GridColumn.EditSettings>
