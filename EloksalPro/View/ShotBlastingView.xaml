						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="4"  Text="Код брака:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="5"  Text="Вес отбракованного профиля, кг:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="6"  Text="Площадь отбракованного профиля,м2:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <!--<TextBlock Grid.Column="4" Grid.Row="0"  Text="Высота прижима, мм:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="4" Grid.Row="1"  Text="Скорость рольганга, м/мин:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="4" Grid.Row="2"  Text="Открытие заслонки, %:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>-->
                    <TextBlock Grid.Column="2" Grid.Row="7"  Text="Сотрудник:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
