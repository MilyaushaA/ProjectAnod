<Window x:Class="EloksalPro.View.ProfileConsumptionWarehouseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EloksalPro.View"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:viewModel="clr-namespace:EloksalPro.ViewModels" 
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        xmlns:Custom="http://schemas.devexpress.com/winfx/2008/xaml/charts/rangecontrolclient" 
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Отгрузка алюминиевого профиля"  Width="980" >
    <Window.DataContext>
        <viewModel:ProfileConsumptionWarehouseViewModel/>
    </Window.DataContext>
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/background.jpg"/>
        </Border.Background>
        <Border CornerRadius="10"    
			BorderThickness="5"
			Opacity="0.94">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF1B4968" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#FF6C0618" Offset="-0.7"/>
                    <GradientStop Color="#FF3C3B42" Offset="1.2"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel x:Name="pnlControlBar"
					Grid.Row="0"
					Orientation="Horizontal"
					FlowDirection="RightToLeft"
					Background="Transparent"
					MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
					MouseEnter="pnlControlBar_MouseEnter">
                    <Button x:Name="btnClose"
						Style="{StaticResource controlButton}"
						Tag="{StaticResource color4}" 
						Click="btnClose_Click" HorizontalAlignment="Right" Width="25" >
                        <fa:IconImage Icon="PowerOff" Style="{StaticResource controlButtonIcon}"  />
                    </Button>
                    <Button x:Name="btnMaximize" Width="25"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color6}"
                                Click="btnMaximize_Click">
                        <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>
                    </Button>
                    <Button x:Name="btnMinimize"  Width="25"
						Style="{StaticResource controlButton}" 
						Tag="{StaticResource color8}"
						Click="btnMinimize_Click">
                        <fa:IconImage Icon="WindowMinimize" Style="{StaticResource controlButtonIcon}"/>
                    </Button>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0"  Text="Номер отгрузочного листа:" FontSize="12"
						Style="{StaticResource controlTextBlock}"  />
                    <TextBlock Grid.Column="0" Grid.Row="1"  Text="Дата:" FontSize="12"
						Style="{StaticResource controlTextBlock}"  />
                    <TextBlock Grid.Column="0" Grid.Row="2"  Text="Смена:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="3"  Text="Номер заказа:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="4"  Text="Номенклатура профиля:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="5"  Text="Номер паллета:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="6"  Text="Номенклатура заказчика:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="7"  Text="Наименование заказчика:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="8"  Text="Вес одного погонного метра, кг/м:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="0" Grid.Row="9"  Text="Длина хлыста, мм:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="0"  Text="Периметр внешний, мм:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="1"  Text="Количество профиля, шт:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="2"  Text="Общий вес профиля, кг:" FontSize="12"
                        Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="3"  Text="Общая площадь, м2:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <!--<TextBlock Grid.Column="2" Grid.Row="3"  Text="Количество хлыстов (брак), шт:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="4"  Text="Общий вес бракованного профиля, кг:" FontSize="12"
                        Style="{StaticResource controlTextBlock}"/>
                    <TextBlock Grid.Column="2" Grid.Row="5"  Text="Площадь бракованного профиля, м2:" FontSize="12"
                        Style="{StaticResource controlTextBlock}"/>-->
                    <TextBlock Grid.Column="2" Grid.Row="4"  Text="Сдал:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <!--<TextBlock Grid.Column="2" Grid.Row="5"  Text="Принял:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>-->
                    <TextBlock Grid.Column="2" Grid.Row="5"  Text="Примечание:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>
                    <!--<TextBlock Grid.Column="2" Grid.Row="7"  Text="Номер отгрузочного листа:" FontSize="12"
						Style="{StaticResource controlTextBlock}"/>-->
                    <TextBox Grid.Column="1" Grid.Row="0" IsEnabled="True" Name="txtNumber" Text="{Binding NumberProfileConsumptionWarehouse, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <DatePicker Grid.Column="1" Grid.Row="1" Name="txtDate" FontSize="12" SelectedDate="{Binding DateProfileConsumptionWarehouse}" DisplayDate="{Binding DateTime.Now}"  BorderBrush="#E0E1F1" Margin="1"/>
                    <ComboBox Grid.Column="1" Grid.Row="2" Name="txtShift" ItemsSource="{Binding WorkingShiftList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding WorkingShiftSource, Mode=TwoWay}" Margin="1"/>
                    <ComboBox Grid.Column="1" Grid.Row="3" Margin="1" ItemsSource="{Binding NumberSpecification, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding NumberSpecificationSource, Mode=TwoWay}" />
                    <ComboBox Grid.Column="1" Grid.Row="4" Margin="1" ItemsSource="{Binding NomenclatureProfileList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding NomenclatureSource, Mode=TwoWay}" />
                    <ComboBox Grid.Column="1" Grid.Row="5" Margin="1" ItemsSource="{Binding BasketNumberList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding BasketNumberSource, Mode=TwoWay}" />
                    <TextBox Grid.Column="1" Grid.Row="6" IsEnabled="False"  Text="{Binding EloksalNoCommercial, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="1" Grid.Row="7"  IsEnabled="False" Name="txtClientName" Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="5" Grid.RowSpan="2"  Text="{Binding Annotation, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <!--<TextBox Grid.Column="3" Grid.Row="6" Grid.RowSpan="2"  Text="{Binding Annotation, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>-->
                    <TextBox Grid.Column="1" Grid.Row="8" IsEnabled="False" Text="{Binding WeightMeter, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="1" Grid.Row="9" IsEnabled="False" Text="{Binding LenghtFact, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="0" IsEnabled="False" Text="{Binding OuterPerimeter, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="1"  Text="{Binding AmountPieceFact, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                   
                    <TextBox Grid.Column="3" Grid.Row="2" IsEnabled="False" Text="{Binding WeightGeneral, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="3" IsEnabled="False" Text="{Binding GeneralAreaProducedProfile, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <!--<TextBox Grid.Column="3" Grid.Row="3"  Text="{Binding AmountPieceDefect, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="4" IsEnabled="False" Text="{Binding WeightGeneralDefect, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>
                    <TextBox Grid.Column="3" Grid.Row="5" IsEnabled="False" Text="{Binding GeneralAreaDefectiveProfile, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>-->




                    <ComboBox Grid.Column="3" Grid.Row="4" Margin="1" ItemsSource="{Binding EmployeeList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding EmployeeSource, Mode=TwoWay}" />
                    <!--<ComboBox Grid.Column="3" Grid.Row="5" Margin="1" ItemsSource="{Binding Employee, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding EmployeeSource, Mode=TwoWay}" />-->
                    <TextBox Grid.Column="0" Grid.Row="10" Name="txtId" IsEnabled="False" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource controlText}"/>

                    
                    
                    <Button Grid.Column="3" Grid.Row="9" Grid.RowSpan="2"  x:Name="btnSave" Command="{Binding SaveInsertCommand}" Content="SAVE DATA" Style="{StaticResource controlButtonGray}" />
                    <dxg:GridControl  Grid.Column="0" Grid.Row="11" Grid.ColumnSpan="6" x:Name="gridControl" EnableSmartColumnsGeneration="True" ItemsSource="{Binding  ProfileConsumptionWarehouseList}" Margin="5"  >
                        <dxg:GridControl.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить строку" Command="{Binding ShowRemoveCommand}" />
                                <MenuItem Header="Печать отгрузочного листа" Command="{Binding ShowPrintReportsCommand}" />
                            </ContextMenu>
                        </dxg:GridControl.ContextMenu>
                        <dxg:GridControl.TotalSummary>
                            <dxg:GridSummaryItem FieldName="WeightGeneral" ShowInColumn="WeightGeneral" SummaryType="Sum"/>
                        </dxg:GridControl.TotalSummary>
                        <dxg:GridColumn FieldName="Id" Header="Id" Visible="False"/>
                        <dxg:GridColumn FieldName="DateProfileConsumptionWarehouse" Header="Дата" Width="90" AllowEditing="False"/>
                        <dxg:GridColumn FieldName="BasketNumber" Header="Номер корзины" Width="120" AllowEditing="False" />
                        <dxg:GridColumn FieldName="NumberSpecification" Header="Номер спецификации" Width="120" AllowEditing="False" />
                        <dxg:GridColumn FieldName="NomenclatureProfile" Header="Номенклатура профиля" Width="120" AllowEditing="False" />
                        <dxg:GridColumn FieldName="EloksalNoCommercial" Header="Номенклатура профиля" Width="115" AllowEditing="False"/>
                        <dxg:GridColumn FieldName="ClientName" Header="Наименование заказчика" Width="120" AllowEditing="False"/>
                        <dxg:GridColumn FieldName="WeightMeter" Header="Вес погонного метра, кг/м" Width="95" AllowEditing="False"/>
                        <dxg:GridColumn FieldName="OuterPerimeter" Header="Периметр внешний, мм" Width="90" AllowEditing="False"/>
                        <dxg:GridColumn FieldName="QuantityProducedProfile" Header="Кол-во хлыстов, шт" Width="90" AllowEditing="False" />
                        <dxg:GridColumn FieldName="LenghtProfile" Header="Длина хлыста, мм" Width="90" AllowEditing="False"/>
                        <dxg:GridColumn FieldName="WeightProducedProfile" Header="Общий вес, кг" Width="80" AllowEditing="False"/>
                        <dxg:GridColumn FieldName="GeneralAreaProducedProfile" Header="Общая площадь, м2" Width="100" AllowEditing="False"/>
                        <!--<dxg:GridColumn FieldName="GeneralAreaDefectiveProfile" Header="Общая площадь брак. профиля,м2" />-->
                        <dxg:GridColumn FieldName="Annotation" Header="Примечание" AllowEditing="False"/>
                        <dxg:GridControl.View>
                            <dxg:TableView x:Name="tableView" ShowTotalSummary="True" FontSize="12" AutoWidth="True" NewItemRowPosition="Bottom" FontFamily="Times New Roman"  >
                                <dxg:TableView.ColumnHeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </dxg:TableView.ColumnHeaderTemplate>
                                <dxg:TableView.RowStyle>
                                    <Style>
                                        <Setter Property="TextElement.Foreground" Value="Black"/>
                                    </Style>
                                </dxg:TableView.RowStyle>
                            </dxg:TableView>
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>